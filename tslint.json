{
    "defaultSeverity": "error",
    "extends": [
        "tslint-react"
    ],
    "rulesDirectory": "src/Utils/TslintRules",
    "rules": {
        "no-disabled-tests": true,
        "no-unused-expression": true,
        "no-duplicate-variable": true,
        "no-unused-variable": true,
        "curly": true,
        "class-name": true,
        "semicolon": [
            true,
            "always"
        ],
        "triple-equals": true,
        "no-trailing-whitespace": true,
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ],
        "prefer-template": [
            true,
            "allow-single-concat"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-module",
            "check-operator",
            "check-separator",
            "check-type",
            "check-typecast"
        ],
        "no-irregular-whitespace": true,
        "no-consecutive-blank-lines": [true],
        "no-boolean-literal-compare": true,
        "variable-name": [
            true,
            "check-format",
            "allow-pascal-case",
            "allow-leading-underscore"
        ],
        "prefer-const": true,
        "typeof-compare": true,
        "switch-default": true,
        "radix": true,
        "no-shadowed-variable": true,
        "no-debugger": true,
        "no-console": [true, "log"],
        "jsx-no-multiline-js": false,
        "max-line-length": {
            "options": [80],
            "severity": "error"
        },
        "no-floating-promises": false
    }
}